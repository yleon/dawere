<p id="notice"><%= notice %></p>

<h1>Listing Daw Cursos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion de meta</th>
      <th>descripcion de curso</th>
      <th>descripcion de pasos</th>
      <th>Estado</th>
      <th>Periodo</th>
      <th>Tipo de fase</th>
      <th>Tipo de precio</th>
      <th>Visible?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daw_cursos.each do |daw_curso| %>
      <tr>
        <td><%= daw_curso.curso_nombre %></td>
        <td><%= daw_curso.curso_descripcionmeta %></td>
        <td><%= daw_curso.curso_descripcioncurso %></td>
        <td><%= daw_curso.curso_descripcionpasos %></td>
        <td><%= daw_curso.curso_estado %></td>
        <td><%= daw_curso.curso_periodo %></td>
        <td><%= daw_curso.curso_tipolapso %></td>
        <td><%= daw_curso.curso_tipoprecio %></td>
        <%if (daw_curso.curso_visible==true)%>
        <td><%= :si %></td>
        <%else%>
        <td><%= :no %></td>
        <%end%>
        <td><%= link_to 'Show', daw_curso %></td>
        <td><%= link_to 'Edit', edit_daw_curso_path(daw_curso) %></td>
        <td><%= button_to 'Destroy', daw_curso, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

